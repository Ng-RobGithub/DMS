{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:node/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "node"
  ],
  "rules": {
    "react/prop-types": "off" // Example: Disable prop-types rule
    // Add other custom rules here if needed
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
